{
  "dashboard": {
    "title": "AgentMesh - Mesh Health",
    "tags": ["agentmesh", "health"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Agent Registry Size",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (status) (agentmesh_registry_size)",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Agents"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Trust Handshakes",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(agentmesh_handshake_total[5m])",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Handshakes/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Policy Violations",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(agentmesh_policy_violation_count[5m])",
            "legendFormat": "{{policy_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Violations/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Average Trust Score",
        "type": "gauge",
        "gridPos": {"x": 12, "y": 8, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "avg(agentmesh_trust_score_gauge)",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1000,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 300, "color": "orange"},
                {"value": 500, "color": "yellow"},
                {"value": 700, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Credentials Issued",
        "type": "stat",
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum(agentmesh_credential_issued_total)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "API Request Duration (p95)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(agentmesh_api_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Tool Calls (Rate)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(agentmesh_tool_call_total[5m])",
            "legendFormat": "{{tool_name}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Calls/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Audit Log Entries",
        "type": "graph",
        "gridPos": {"x": 0, "y": 24, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "rate(agentmesh_audit_log_total[5m])",
            "legendFormat": "{{event_type}} - {{outcome}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Entries/sec"},
          {"format": "short"}
        ]
      }
    ]
  }
}
